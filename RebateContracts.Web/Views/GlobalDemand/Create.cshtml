@model RebateContracts.Web.Models.GlobalDemandViewModel
@{
    ViewData["Title"] = Model.Id == Guid.Empty ? "Create Global Demand" : "Edit Global Demand";
    var isEdit = Model.Id != Guid.Empty;
}

<h1 class="text-2xl font-bold mb-6 text-primary">@ViewData["Title"]</h1>

<form asp-action="@(isEdit ? "Edit" : "Create")" method="post" class="space-y-6 max-w-xl bg-white p-6 rounded shadow">
    @if (isEdit)
    {
        <input type="hidden" asp-for="Id" />
    }
    <div>
        <label asp-for="Product" class="block mb-1 font-medium">Product</label>
        <input asp-for="Product" class="form-input w-full border border-border rounded px-3 py-2 focus:border-primary focus:ring-primary" required />
        <span asp-validation-for="Product" class="text-error text-sm"></span>
    </div>
    <div>
        <label asp-for="Year" class="block mb-1 font-medium">Year</label>
        <input asp-for="Year" type="number" class="form-input w-full border border-border rounded px-3 py-2 focus:border-primary focus:ring-primary" required />
        <span asp-validation-for="Year" class="text-error text-sm"></span>
    </div>
    <div>
        <label asp-for="Forecast" class="block mb-1 font-medium">Forecast (MT)</label>
        <input asp-for="Forecast" type="number" step="0.001" class="form-input w-full border border-border rounded px-3 py-2 focus:border-primary focus:ring-primary" required />
        <span asp-validation-for="Forecast" class="text-error text-sm"></span>
    </div>
    <div>
        <button type="submit" class="bg-primary text-white px-6 py-2 rounded hover:bg-primary-dark transition">@(isEdit ? "Save" : "Create")</button>
        <a asp-action="Index" class="ml-2 text-secondary hover:underline">Cancel</a>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
