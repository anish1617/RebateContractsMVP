@{
    ViewData["Title"] = "Edit Global Demand";
}

<h1 class="text-2xl font-bold mb-6 text-primary">Edit Global Demand</h1>

<!-- TODO: Replace with actual form fields and ViewModel -->
<form asp-action="Edit" method="post" class="space-y-4 max-w-xl">
    <input type="hidden" name="Id" value="@ViewBag.Id" />
    <div>
        <label class="block mb-1 font-medium">Product</label>
        <input type="text" name="Product" class="form-input w-full" value="@ViewBag.Product" required />
    </div>
    <div>
        <label class="block mb-1 font-medium">Year</label>
        <input type="number" name="Year" class="form-input w-full" value="@ViewBag.Year" required />
    </div>
    <div>
        <label class="block mb-1 font-medium">Forecast (MT)</label>
        <input type="number" name="Forecast" class="form-input w-full" value="@ViewBag.Forecast" required />
    </div>
    <div>
        <button type="submit" class="bg-primary text-white px-4 py-2 rounded hover:bg-primary-dark transition">Save</button>
        <a asp-action="Index" class="ml-2 text-secondary hover:underline">Cancel</a>
    </div>
</form>
