@{
    ViewData["Title"] = "Import Data";
}

<div class="mb-4">
    <a asp-action="Index" class="text-primary hover:underline">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline-block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Import/Export Center
    </a>
</div>

<h1 class="text-2xl font-bold mb-6 text-primary">Import Data</h1>

@if (TempData["Error"] != null)
{
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
        <p>@TempData["Error"]</p>
    </div>
}

<div class="bg-white p-6 rounded-lg shadow-md">
    <form asp-action="ImportCsv" method="post" enctype="multipart/form-data">
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Select Entity Type</label>
            <select name="entityType" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary">
                <option value="">-- Select Entity Type --</option>
                <option value="contracts">Contracts</option>
                <option value="tieredranges">Tiered Ranges</option>
                <option value="countrymapping">Country Mapping</option>
                <option value="concentrationconversion">Concentration Conversion</option>
                <option value="quantityadjustment">Quantity Adjustment</option>
            </select>
        </div>
        
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Upload CSV File</label>
            <input type="file" name="file" accept=".csv" class="block w-full text-sm text-gray-500
                file:mr-4 file:py-2 file:px-4
                file:rounded-md file:border-0
                file:text-sm file:font-semibold
                file:bg-primary file:text-white
                hover:file:bg-primary-dark" />
            <p class="mt-2 text-xs text-gray-500">Please upload a CSV file with proper headers</p>
        </div>
        
        <div class="flex items-center justify-between">
            <button type="submit" class="bg-primary text-white px-6 py-2 rounded hover:bg-primary-dark transition">
                Import Data
            </button>
        </div>
    </form>
</div>

<div class="mt-8 bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-semibold mb-4 text-primary">Import Templates</h2>
    
    <p class="mb-4 text-sm text-gray-600">Download import templates for each entity type to ensure your data is formatted correctly:</p>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <div class="border rounded p-4">
            <h3 class="font-semibold text-gray-800 mb-2">Contracts Template</h3>
            <a href="#" class="text-primary hover:underline text-sm">Download Template</a>
        </div>
        
        <div class="border rounded p-4">
            <h3 class="font-semibold text-gray-800 mb-2">Tiered Ranges Template</h3>
            <a href="#" class="text-primary hover:underline text-sm">Download Template</a>
        </div>
        
        <div class="border rounded p-4">
            <h3 class="font-semibold text-gray-800 mb-2">Country Mapping Template</h3>
            <a href="#" class="text-primary hover:underline text-sm">Download Template</a>
        </div>
        
        <div class="border rounded p-4">
            <h3 class="font-semibold text-gray-800 mb-2">Concentration Conversion Template</h3>
            <a href="#" class="text-primary hover:underline text-sm">Download Template</a>
        </div>
        
        <div class="border rounded p-4">
            <h3 class="font-semibold text-gray-800 mb-2">Quantity Adjustment Template</h3>
            <a href="#" class="text-primary hover:underline text-sm">Download Template</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Show toast notification if available
        if ('@TempData["Toast"]') {
            showToast('@TempData["Toast"]');
        }
    </script>
}
