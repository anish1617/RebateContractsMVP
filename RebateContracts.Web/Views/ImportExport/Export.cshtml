@{
    ViewData["Title"] = "Export Data";
}

<div class="mb-4">
    <a asp-action="Index" class="text-primary hover:underline">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 inline-block" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Import/Export Center
    </a>
</div>

<h1 class="text-2xl font-bold mb-6 text-primary">Export Data</h1>

@if (TempData["Error"] != null)
{
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-6" role="alert">
        <p>@TempData["Error"]</p>
    </div>
}

<div class="bg-white p-6 rounded-lg shadow-md">
    <form asp-action="ExportCsv" method="post">
        <div class="mb-6">
            <label class="block text-sm font-medium text-gray-700 mb-2">Select Entity Type to Export</label>
            <select name="entityType" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-primary">
                <option value="">-- Select Entity Type --</option>
                <option value="contracts">Contracts</option>
                <option value="tieredranges">Tiered Ranges</option>
                <option value="countrymapping">Country Mapping</option>
                <option value="concentrationconversion">Concentration Conversion</option>
                <option value="quantityadjustment">Quantity Adjustment</option>
            </select>
        </div>
        
        <div class="flex items-center justify-between">
            <button type="submit" class="bg-primary text-white px-6 py-2 rounded hover:bg-primary-dark transition">
                Export to CSV
            </button>
        </div>
    </form>
</div>

<div class="mt-8 bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-semibold mb-4 text-primary">Export Options</h2>
    
    <div class="space-y-4 text-sm">
        <div>
            <h3 class="font-semibold text-gray-800">File Format:</h3>
            <p class="text-gray-600">All exports are in CSV format with UTF-8 encoding.</p>
        </div>
        
        <div>
            <h3 class="font-semibold text-gray-800">Data Scope:</h3>
            <p class="text-gray-600">Exports include all data for the selected entity type.</p>
        </div>
        
        <div>
            <h3 class="font-semibold text-gray-800">Usage Notes:</h3>
            <ul class="list-disc ml-6 mt-2 text-gray-600">
                <li>Exported files can be opened in Excel or any text editor</li>
                <li>Files may be modified and reimported using the import tool</li>
                <li>For large datasets, export may take a few moments to complete</li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Show toast notification if available
        if ('@TempData["Toast"]') {
            showToast('@TempData["Toast"]');
        }
    </script>
}
