<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RebateContracts.Web</title>
    <link rel="stylesheet" href="~/css/tailwind.generated.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RebateContracts.Web.styles.css" asp-append-version="true" />
</head>
<body class="bg-neutral">
    <header>
        <nav class="flex items-center justify-between px-6 py-4 bg-white border-b border-border shadow-sm">
            <div class="flex items-center gap-4">
                <a class="text-primary font-bold text-xl" asp-area="" asp-controller="Home" asp-action="Index">RebateContracts.Web</a>
            </div>
            <div class="flex gap-4">
                <a class="text-secondary hover:text-primary transition" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                <a class="text-secondary hover:text-primary transition" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </nav>
    </header>
    <div class="container mx-auto px-4">
        <main role="main" class="py-8">
            @RenderBody()
        </main>
    </div>
    <footer class="border-t border-border text-muted py-4 mt-8">
        <div class="container mx-auto px-4 text-center">
            &copy; 2025 - RebateContracts.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-secondary hover:text-primary">Privacy</a>
        </div>
    </footer>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
