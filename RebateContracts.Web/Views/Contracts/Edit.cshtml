@{
    ViewData["Title"] = "Edit Contract";
}

<h1 class="text-2xl font-bold mb-6 text-primary">Edit Contract</h1>

<!-- TODO: Replace with actual form fields and ViewModel -->
<form asp-action="Edit" method="post" class="space-y-4 max-w-xl">
    <input type="hidden" name="Id" value="@ViewBag.Id" />
    <div>
        <label class="block mb-1 font-medium">Name</label>
        <input type="text" name="Name" class="form-input w-full" value="@ViewBag.Name" required />
    </div>
    <div>
        <label class="block mb-1 font-medium">Type</label>
        <select name="ContractType" class="form-select w-full">
            <option value="0" selected=@(ViewBag.ContractType == 0 ? "selected" : null)>Percentage</option>
            <option value="1" selected=@(ViewBag.ContractType == 1 ? "selected" : null)>PerMT</option>
            <option value="2" selected=@(ViewBag.ContractType == 2 ? "selected" : null)>Tiered</option>
        </select>
    </div>
    <div class="flex gap-4">
        <div class="flex-1">
            <label class="block mb-1 font-medium">Start Date</label>
            <input type="date" name="StartDate" class="form-input w-full" value="@ViewBag.StartDate" required />
        </div>
        <div class="flex-1">
            <label class="block mb-1 font-medium">End Date</label>
            <input type="date" name="EndDate" class="form-input w-full" value="@ViewBag.EndDate" required />
        </div>
    </div>
    <div>
        <button type="submit" class="bg-primary text-white px-4 py-2 rounded hover:bg-primary-dark transition">Save</button>
        <a asp-action="Index" class="ml-2 text-secondary hover:underline">Cancel</a>
    </div>
</form>
