@{
    ViewData["Title"] = "Import/Export Contracts";
}

<h1 class="text-2xl font-bold mb-6 text-primary">Import/Export Contracts</h1>

<div class="bg-white p-6 rounded shadow max-w-2xl">
    <form asp-action="Import" method="post" enctype="multipart/form-data" class="mb-6">
        <label class="block mb-2 font-medium">Import from CSV or Excel</label>
        <input type="file" name="file" accept=".csv,.xlsx,.xls" class="mb-2" required />
        <button type="submit" class="bg-primary text-white px-4 py-2 rounded hover:bg-primary-dark transition">Import</button>
    </form>
    <form asp-action="Export" method="get">
        <button type="submit" class="bg-secondary text-white px-4 py-2 rounded hover:bg-secondary-dark transition">Export All Contracts</button>
    </form>
</div>
